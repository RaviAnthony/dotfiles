[user]
    name = Shabda Raaj
    email = shabda@agiliq.com
[color]
    ui = auto
[push]
    default = tracking
[alias]
    a = add
    b = branch
    co = checkout
    ci = commit
    d = diff --word-diff
    f = stash save
    l = log --graph --pretty=oneline --abbrev-commit --decorate --since=1.days
    p = push
    st = status -sb
    up = pull
    refresh=pull origin master
	switch = !legit switch \"$@\"
	branches = !legit branches
	sprout = !legit sprout \"$@\"
	unpublish = !legit unpublish \"$@\"
	harvest = !legit harvest \"$@\"
	sync = !legit sync \"$@\"
	publish = !legit publish \"$@\"
	graft = !legit graft \"$@\"
   

[core]
	excludesfile = ~/.gitignore  
